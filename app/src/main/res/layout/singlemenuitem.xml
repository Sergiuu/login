<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    tools:context="com.sergiu.newfoodorderclient.FoodPageActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/foodImage"
                android:layout_marginTop="10dp"
                android:background="@drawable/pizzaone"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza is life"
                    android:textSize="30dp"
                    android:layout_toRightOf="@+id/foodImage"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/foodName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/foodImage"
                android:layout_below="@+id/foodName"
                android:text="   Italia la carzonne "
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                android:id="@+id/foodDesc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12"
                android:layout_toEndOf="@+id/foodImage"
                android:layout_below="@id/foodDesc"
                android:textSize="20dp"
                android:layout_marginLeft="14dp"
                android:textColor="#4CAF50"
                android:id="@+id/foodPrice"

                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>